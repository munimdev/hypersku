generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  rating      Float?
  image       String? @unique @default("https://placehold.co/500x500")

  @@index([name, description])
}
